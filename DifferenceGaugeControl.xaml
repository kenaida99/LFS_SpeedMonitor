<UserControl x:Class="DifferenceGaugeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LFS_SpeedMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="350">
    <Grid Height="40">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Left indicators (slower - red) -->
            <Border x:Name="left5" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="left4" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="left3" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="left2" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="left1" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>

            <!-- Center value display -->
            <Border Background="#FF333333" CornerRadius="3" Padding="10,5" Margin="5,0">
                <TextBlock x:Name="txtValue" Text="+0.00" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" MinWidth="50" TextAlignment="Center"/>
            </Border>

            <!-- Right indicators (faster - green) -->
            <Border x:Name="right1" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="right2" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="right3" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="right4" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
            <Border x:Name="right5" Width="15" Height="25" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="2" Margin="2"/>
        </StackPanel>
    </Grid>
</UserControl>